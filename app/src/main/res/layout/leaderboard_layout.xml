<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="397dp"
        android:layout_height="70dp"
        android:layout_margin="4dp" android:id="@+id/cardView">

    <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/leaderBoardName"
                android:text="PERSONS NAME"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:text="AND COUNTRY"
                android:id="@+id/leaderBoardCountry"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_below="@+id/leaderBoardName"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:text="100H 2m"
                android:id="@+id/leaderBoardTime"
                android:layout_width="105dp"
                android:layout_height="38dp"
                android:layout_toRightOf="@+id/leaderBoardCountry"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="20dp" android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:textStyle="bold|italic"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:text="2nd"
                android:id="@+id/leaderBoardPosition"
                android:layout_width="60dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/leaderBoardCountry"
                android:layout_marginLeft="118dp"
                android:layout_marginTop="20dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>